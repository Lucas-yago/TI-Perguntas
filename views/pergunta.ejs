<%-include ('./partials/header.ejs')%>
<body>
    <%-include ('./partials/navbar.ejs')%>
    <div class="container">
        <br>
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
            
              <h1 class="display-4"><%= pergunta.titulo %></h1>
              <p class="lead"><%= pergunta.descricao%></p>
            
            </div>
        </div>
        <hr><br>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach((resposta, indice)=>{ 
            let quebraLinha = resposta.corpo.split("\n")%>
            <div class="card">
                <div class="card-body">
                    <% quebraLinha.forEach( linha =>{ %>
                        <p><%= linha%></p>
                    <% }) %>
                </div>
            </div>
            <br>
        <% })%>
        

            <form method="POST" action="/salvarresposta">
                <br>
                <h3>Responda</h3><hr>
                <label>Resposta: </label>
                <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea><br>
                <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                <button type="submit" class="btn btn-primary">Responder</button>
            </form><br>
        </div>

    </body>

    <%-include ('./partials/footer.ejs')%>